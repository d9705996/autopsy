# ─── Database ─────────────────────────────────────────────────────────────────
# DB_DRIVER selects the database backend.
#   sqlite   — no external process needed; great for local dev (default)
#   postgres — production-grade; requires a running PostgreSQL instance
DB_DRIVER=sqlite

# SQLite: path to the database file (created automatically on first boot)
DB_FILE=autopsy.db

# PostgreSQL: connection string (required when DB_DRIVER=postgres)
# DB_DSN=postgres://autopsy:autopsy@localhost:5432/autopsy?sslmode=disable

# ─── Required ─────────────────────────────────────────────────────────────────
JWT_SECRET=change-me-in-production-use-a-long-random-string

# ─── HTTP ─────────────────────────────────────────────────────────────────────
HTTP_PORT=8080

# ─── Logging ──────────────────────────────────────────────────────────────────
LOG_LEVEL=info      # debug | info | warn | error
LOG_FORMAT=text     # text | json

# ─── JWT / Session ────────────────────────────────────────────────────────────
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h

# ─── Worker (River queue — postgres only) ────────────────────────────────────
WORKER_CONCURRENCY=10

# ─── OpenTelemetry ────────────────────────────────────────────────────────────
# OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317   # leave empty to disable OTLP traces

# ─── AI provider ──────────────────────────────────────────────────────────────
AI_PROVIDER=noop
# AI_API_KEY=sk-...
# AI_API_BASE=https://api.openai.com/v1
# AI_MODEL=gpt-4o-mini

# ─── Seed admin (first boot) ──────────────────────────────────────────────────
SEED_ADMIN_EMAIL=admin@autopsy.local
# SEED_ADMIN_PASSWORD=        # if unset, a random password is printed at startup
